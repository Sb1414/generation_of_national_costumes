<Window x:Class="ImageMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMaker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition />
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="5*"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Name="ImageMaker" Grid.Row="2" Grid.Column="3" />
        <Image Name="SelectedImagePreview" Grid.Column="1" Grid.Row="2" />
        <Button Name="AddButton" Click="AddButton_Click" Content="Add" Grid.Column="1" Grid.Row="3"></Button>
        <Button Name="ResultButton" Click="ResultButton_Click" Content="Result" Grid.Column="3" Grid.Row="3"></Button>
     </Grid>
</Window>
